<script type="text/javascript">
function showDiv() {
   document.getElementById('welcomeDiv').style.display = "block";
}
$(function() { 
   
    $('#exampleFormControlSelect1').change(function(){
        if($('#exampleFormControlSelect1').val() == '1') {

            $('.carneh').show();
        } else {
            $('.carneh').hide(); 
        } 
    });
});	

